{
	"description": "Symfony webhook",
	"type": "project",
	"license": "proprietary",
	"minimum-stability": "stable",
	"prefer-stable": true,
	"require": {
		"php": ">=8.2",
		"ext-ctype": "*",
		"ext-iconv": "*",
		"doctrine/dbal": "^4",
		"doctrine/doctrine-bundle": "^2.12",
		"doctrine/doctrine-migrations-bundle": "^3.3",
		"doctrine/orm": "^3.1",
		"phpdocumentor/reflection-docblock": "^5.3",
		"runtime/frankenphp-symfony": "^0.2.0",
		"symfony/asset": "7.2.*",
		"symfony/asset-mapper": "7.2.*",
		"symfony/console": "7.2.*",
		"symfony/doctrine-messenger": "7.2.*",
		"symfony/dotenv": "7.2.*",
		"symfony/expression-language": "7.2.*",
		"symfony/flex": "^2.5.0",
		"symfony/form": "^7.2.4",
		"symfony/framework-bundle": "^7.2.4",
		"symfony/http-client": "^7.2.4",
		"symfony/intl": "7.2.*",
		"symfony/mailer": "7.2.*",
		"symfony/mime": "^7.2.4",
		"symfony/monolog-bundle": "^3.0",
		"symfony/notifier": "7.2.*",
		"symfony/process": "^7.2.4",
		"symfony/property-access": "7.2.*",
		"symfony/property-info": "7.2.*",
		"symfony/runtime": "7.2.*",
		"symfony/security-bundle": "7.2.*",
		"symfony/serializer": "^7.2.4",
		"symfony/stimulus-bundle": "^2.16",
		"symfony/string": "7.2.*",
		"symfony/translation": "^7.2.4",
		"symfony/twig-bundle": "7.2.*",
		"symfony/ux-turbo": "^2.16",
		"symfony/validator": "^7.2.4",
		"symfony/web-link": "7.2.*",
		"symfony/webhook": "7.2.*",
		"symfony/yaml": "7.2.*",
		"twig/extra-bundle": "^3.13",
		"twig/twig": "^3.14"
	},
	"config": {
		"allow-plugins": {
			"composer/package-versions-deprecated": true,
			"php-http/discovery": true,
			"symfony/flex": true,
			"symfony/runtime": true
		},
		"optimize-autoloader": true,
		"sort-packages": true
	},
	"autoload": {
		"psr-4": {
			"App\\": "src/"
		}
	},
	"autoload-dev": {
		"psr-4": {
			"App\\Tests\\": "tests/"
		}
	},
	"replace": {
		"symfony/polyfill-ctype": "*",
		"symfony/polyfill-iconv": "*",
		"symfony/polyfill-php72": "*",
		"symfony/polyfill-php73": "*",
		"symfony/polyfill-php74": "*",
		"symfony/polyfill-php80": "*",
		"symfony/polyfill-php81": "*",
		"symfony/polyfill-php82": "*"
	},
	"scripts": {
		"auto-scripts": {
			"cache:clear": "symfony-cmd",
			"assets:install %PUBLIC_DIR%": "symfony-cmd",
			"importmap:install": "symfony-cmd"
		},
		"post-install-cmd": [
			"@auto-scripts"
		],
		"post-update-cmd": [
			"@auto-scripts"
		],
		"deploy": [
			"composer cache-clear; rm -rf public/assets; bin/console asset-map:compile"
		],
		"cache-clear": [
			"sudo -u www-data bin/console cache:clear"
		],
		"test": [
			"if php -m | grep -q 'xdebug'; then ./bin/phpunit -c ./phpunit.xml --exclude-group failure --coverage-clover var/coverage/coverage.xml && vendor/bin/php-coverage-badger var/coverage/coverage.xml .github/badges/coverage.svg; else ./bin/phpunit -c ./phpunit.xml --exclude-group failure --no-coverage; fi"
		],
		"php-cs-fixer": [
			"vendor/bin/php-cs-fixer fix --allow-risky=yes --using-cache=no --config .php-cs-fixer.php src tests"
		],
		"twig-cs-fixer": [
			"vendor/bin/twig-cs-fixer lint --fix templates"
		],
		"rector": [
			"vendor/bin/rector process"
		],
		"phpstan": [
			"vendor/bin/phpstan analyse"
		],
		"fix": [
			"composer rector && composer test && composer php-cs-fixer && composer twig-cs-fixer"
		]
	},
	"conflict": {
		"symfony/symfony": "*"
	},
	"extra": {
		"symfony": {
			"allow-contrib": true,
			"require": "7.2.*",
			"docker": true
		}
	},
	"require-dev": {
		"friendsofphp/php-cs-fixer": "^3.70.2",
		"jaschilz/php-coverage-badger": "^2.0",
		"phpstan/phpdoc-parser": "^2.0",
		"phpunit/phpunit": "^10.5",
		"rector/rector": "^2.0.10",
		"symfony/browser-kit": "^7.2.4",
		"symfony/css-selector": "7.2.*",
		"symfony/debug-bundle": "7.2.*",
		"symfony/maker-bundle": "^1.0",
		"symfony/phpunit-bridge": "7.2.*",
		"symfony/stopwatch": "^7.2.4",
		"symfony/web-profiler-bundle": "^7.2.4",
		"vincentlanglet/twig-cs-fixer": "^3.5.1"
	}
}
